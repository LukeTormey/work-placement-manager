{% extends 'base.html.twig' %}

{% block title %}Organization index{% endblock %}

{% block body %}
<div class="content" style="border: 2px solid #070c0a;">

    <h1>Organizations</h1>
<style>
    h1 {
        text-align: center;
    }
    body {
        background-color: lightblue;
    }
    .content{
        background-color: darkcyan;
        width: 100%;
    }
    </style>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Hiringmanager</th>
                <th>Location</th>
                <th>Jobs</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for organization in organizations %}
            <tr>
                <td>{{ organization.id }}</td>
                <td>{{ organization.name }}</td>
                <td>{{ organization.hiringmanager }}</td>
                <td>{{ organization.location }}</td>
                <td>
                    <a href="{{ path('jobs_show', {'id': organization.job.id}) }}">
                        {{ organization.job }}
                    </a>
                </td>
                <td>
                    <a href="{{ path('organization_show', {'id': organization.id}) }}">show</a>
                    {% if is_granted('ROLE_EMPLOYER') %}
                    <a href="{{ path('organization_edit', {'id': organization.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <a href="{{ path('organization_new') }}">Create new</a>
{% endblock %}
