{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <style>
        .messagelink {
            border: 2px solid;
            background-color: mediumspringgreen;
        }
    </style>
    <h1>Create your CV</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Dateofbirth</th>
                <th>Address</th>
                <th>College</th>
                <th>Degree</th>
                <th>WorkExperience</th>
                <th>Referees</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <td>
                <td>{{ cv.id }}</td>
                <td>{{ cv.name }}</td>
                <td>{{ cv.Dateofbirth ? cv.Dateofbirth|date('Y-m-d') : '' }}</td>
                <td>{{ cv.address }}</td>
                <td>{{ cv.college }}</td>
                <td>{{ cv.degree }}</td>
                <td>{{ cv.workExperience }}</td>
                <td>{{ cv.referees }}</td>
                <td>{{ cv.image }}
                <br>
                <img src="/images/{{ cv.image }}">
                </td>
                <td>
                    <a href="{{ path('cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('cv_new') }}">Create new</a>
    <div class ="messagelink">
    <h4>Well done on creating your cv! Come here to view the messages and suggestions your lecturer has made!</h4>
        <a href="{{ path('message_index') }}">Messages</a>
    </div>
{% endblock %}
