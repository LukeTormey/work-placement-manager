{% extends 'base.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DOB</th>
                <th>Address</th>
                <th>College</th>
                <th>Degree</th>
                <th>Workexperience</th>
                <th>Referees</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.Name }}</td>
                <td>{{ cv.DOB ? cv.DOB|date('Y-m-d') : '' }}</td>
                <td>{{ cv.address }}</td>
                <td>{{ cv.college }}</td>
                <td>{{ cv.degree }}</td>
                <td>{{ cv.workexperience }}</td>
                <td>{{ cv.referees }}</td>
                <td>{{ cv.image }}</td>
                <td>
                    <a href="{{ path('cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cv_new') }}">Create new</a>
{% endblock %}
